# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000

# Sensor Configuration
MILESIGHT_API_URL=http://your-milesight-ip
MILESIGHT_API_KEY=your-api-key
MILESIGHT_USERNAME=admin
MILESIGHT_PASSWORD=your-password

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=retail_platform
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Supabase Configuration
BLIPEE_POSTGRES_URL=your-supabase-postgres-url
BLIPEE_POSTGRES_USER=postgres
BLIPEE_POSTGRES_HOST=your-supabase-host
BLIPEE_SUPABASE_JWT_SECRET=your-supabase-jwt-secret
BLIPEE_NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
BLIPEE_POSTGRES_PRISMA_URL=your-supabase-prisma-url
BLIPEE_POSTGRES_PASSWORD=your-supabase-password
BLIPEE_POSTGRES_DATABASE=postgres
BLIPEE_SUPABASE_URL=your-supabase-url
BLIPEE_NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
BLIPEE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
BLIPEE_POSTGRES_URL_NON_POOLING=your-supabase-non-pooling-url

# Authentication
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret

# Telegram Integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_INTERVAL=300000

# Feature Flags
ENABLE_HEATMAPS=true
ENABLE_PEOPLE_COUNTING=true
ENABLE_REAL_TIME_UPDATES=true